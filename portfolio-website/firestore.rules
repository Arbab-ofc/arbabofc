rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
             request.auth.token.email == 'arbabprvt@gmail.com';
    }
    
    // Public read collections
    match /projects/{projectId} {
      allow read: if true;
      allow write: if isAdmin();
      allow update: if isAuthenticated() && 
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likes', 'likedBy', 'views']);
    }
    
    match /experiences/{expId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /education/{eduId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /experienceRoadmap/{roadmapId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /studyRoadmap/{roadmapId} {
      allow read: if true;
      // allow admin writes and authenticated (including anonymous) edits for the learning journey
      allow write: if isAdmin() || isAuthenticated();
    }
    
    match /skills/{skillId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /blogs/{blogId} {
      allow read: if true;
      allow write: if isAdmin();
      // allow anyone to update engagement fields (likes/dislikes/reactions/readCount)
      allow update: if request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likes', 'likedBy', 'dislikes', 'dislikedBy', 'readCount', 'reactions']);
    }
    
    match /settings/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Protected collections
    match /messages/{messageId} {
      allow read: if isAdmin();
      allow create: if isAuthenticated();
      allow update, delete: if isAdmin();
    }
    
    match /chats/{chatId} {
      allow read: if isAuthenticated() && 
        (isAdmin() || resource.data.visitorId == request.auth.uid);
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() &&
        (isAdmin() || resource.data.visitorId == request.auth.uid);
      allow delete: if isAdmin();
      
      match /messages/{messageId} {
        allow read: if isAuthenticated() && 
          (isAdmin() || get(/databases/$(database)/documents/chats/$(chatId)).data.visitorId == request.auth.uid);
        allow create: if isAuthenticated();
        allow update: if isAdmin();
      }
    }
    
    match /analytics/{analyticId} {
      allow read: if isAdmin();
      allow create, update: if isAuthenticated();
    }

    // Public contact submissions
    match /contactMessages/{messageId} {
      allow read: if isAdmin();
      allow create: if true; // accept from all visitors
    }
  }
}
 
